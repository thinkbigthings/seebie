<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.thinkbigthings.seebie.android" >
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/sleep"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.thinkbigthings.seebie.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.thinkbigthings.seebie.android.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="org.thinkbigthings.seebie.android.MainActivity" >
        </activity>
    </application>

</manifest>
