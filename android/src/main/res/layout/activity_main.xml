<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:layout_gravity="fill_horizontal"
        android:columnCount="3"
        >

        <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="0dp"
              android:paddingRight="0dp"
              android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got into bed at 9:30 PM"
                android:id="@+id/startTime"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:id="@+id/startDate"/>

        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Awake in bed for 0 minutes"
            android:id="@+id/timeInBedAwake"
            android:layout_columnSpan="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Awake out of bed for 0 minutes"
            android:id="@+id/timeOutOfBedAwake"
            android:layout_columnSpan="3"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Got up for the day at 4:30 AM"
                android:id="@+id/finishTime"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:id="@+id/finishDate"/>

        </LinearLayout>




        <Button android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="3"
                android:text="@string/calculate"
                android:onClick="calculate"/>

    </GridLayout>
</ScrollView>