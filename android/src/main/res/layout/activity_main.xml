<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:layout_gravity="fill_horizontal"
        android:columnCount="3"
        >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/awake_in"
                  android:layout_row="0"
                  android:layout_column="0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="in bed"
            android:id="@+id/timeInBedAwake"
            android:layout_columnSpan="2" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/awake_out"
                  android:layout_row="1"
                  android:layout_column="0"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="out of bed"
            android:id="@+id/timeOutOfBedAwake"
            android:layout_columnSpan="2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/time_start"
                  android:layout_weight="1"
                  android:layout_row="2"
                  android:layout_column="0"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/time_finish"
                  android:layout_weight="1"
                  android:layout_row="3"
                  android:layout_column="0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Start Time"
            android:id="@+id/startTime"
            android:layout_row="2"
            android:layout_column="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Start Date"
            android:id="@+id/startDate"
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Finish Date"
            android:id="@+id/finishDate"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="Finish Time"
            android:id="@+id/finishTime"/>


        <Button android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="3"
                android:text="@string/calculate"
                android:onClick="calculate"
                android:layout_column="0"/>

    </GridLayout>
</ScrollView>